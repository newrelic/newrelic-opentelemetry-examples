# =============================================================================
# NEW RELIC CONFIGURATION
# =============================================================================
# New Relic API key to authenticate the export requests.
# docs: https://docs.newrelic.com/docs/apis/intro-apis/new-relic-api-keys/#license-key
NEW_RELIC_API_KEY=<INSERT_API_KEY_HERE>

# The OTLP endpoint for your New Relic region
# US: https://otlp.nr-data.net
# EU: https://otlp.eu01.nr-data.net
NEW_RELIC_OTLP_ENDPOINT=https://otlp.nr-data.net

# =============================================================================
# ERROR GENERATOR CONFIGURATION
# =============================================================================
# Percentage of requests that should result in errors (0.0 to 1.0)
# Default: 0.3 (30% error rate)
ERROR_RATE=0.3

# Interval between generated requests in milliseconds
# Default: 2000 (generate a request every 2 seconds)
REQUEST_INTERVAL_MS=2000

# Enable/disable specific error types
# Set to "true" or "false"
ENABLE_TIMEOUT_ERRORS=true
ENABLE_VALIDATION_ERRORS=true
ENABLE_DATABASE_ERRORS=true
ENABLE_NETWORK_ERRORS=true
ENABLE_AUTH_ERRORS=true

